# ============================================================================
# Landing Zone - Example Configuration
# Copy this file to terraform.tfvars and modify values
# ============================================================================

# Project Settings
project_name = "neobank"
environment  = "prod"
aws_region   = "us-east-1"

# Allowed regions for workloads (enforced by SCPs)
allowed_regions = ["us-east-1", "us-west-2", "eu-west-1"]

# ============================================================================
# Organization Settings
# ============================================================================
# Set to true only if you're the management account and want to create
# a new AWS Organization. This should typically be false.
create_organization = false

# Set to true to create new AWS accounts for each OU
# WARNING: Creating accounts cannot be undone!
create_accounts = false

# Email domain for new accounts (e.g., aws+logarchive@company.com)
account_email_domain = "example.com"

# ============================================================================
# Existing Account IDs
# If not creating new accounts, specify existing account IDs
# Leave empty to use the current account for all services
# ============================================================================
log_archive_account_id = ""
audit_account_id       = ""
network_account_id     = ""

# ============================================================================
# Logging Settings
# ============================================================================
# Enable S3 Object Lock for immutable audit logs
# NOTE: Requires creating a new bucket with Object Lock enabled
enable_s3_object_lock = false

# Log retention periods (in days)
cloudtrail_retention_days   = 2555  # 7 years (compliance)
config_retention_days       = 2555  # 7 years (compliance)
vpc_flow_log_retention_days = 365   # 1 year

# ============================================================================
# Security Hub Standards
# ============================================================================
enable_cis_standard              = true
enable_pci_dss_standard          = true
enable_aws_foundational_standard = true
enable_nist_standard             = true

# ============================================================================
# Service Catalog Settings
# Provide role ARNs to enable Service Catalog portfolios
# ============================================================================
# admin_role_arn     = "arn:aws:iam::123456789012:role/Admin"
# developer_role_arn = "arn:aws:iam::123456789012:role/Developer"

# ============================================================================
# EKS/ALB Settings (for integrating with existing EKS cluster)
# ============================================================================
# eks_cluster_name   = "neobank-dev-eks"
# vpc_id             = "vpc-xxx"
# public_subnet_ids  = ["subnet-xxx", "subnet-yyy"]
# private_subnet_ids = ["subnet-aaa", "subnet-bbb"]

# Optional: Domain and certificate for HTTPS
# domain_name     = "neobank.example.com"
# certificate_arn = "arn:aws:acm:us-east-1:xxx:certificate/xxx"

# WAF integration
enable_waf = true
# waf_web_acl_arn = "arn:aws:wafv2:us-east-1:xxx:regional/webacl/xxx"

# ============================================================================
# Tags
# ============================================================================
tags = {
  Project     = "neobank"
  Environment = "prod"
  CostCenter  = "engineering"
  Owner       = "platform-team"
}
